<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:background="@drawable/edit_img"

    tools:context="layout.FragmentInicio2">

    <android.support.v7.widget.CardView
        android:id="@+id/card1"

        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"
        app:cardBackgroundColor="@color/colormedio"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="0dp"
        card_view:contentPadding="5dp"
        card_view:layout_constraintBottom_toTopOf="@+id/card3"
        card_view:layout_constraintLeft_toLeftOf="parent"
        card_view:layout_constraintRight_toLeftOf="@+id/card2"
        card_view:layout_constraintTop_toTopOf="parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:orientation="vertical"
            android:background="@android:color/transparent"
            android:weightSum="1"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                >
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="0"
                >
            <ImageView
                android:id="@+id/icon1"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:backgroundTint="@color/colorNotificacion"
                android:src="@drawable/ic_notice_prueba2" />

            <TextView
                android:id="@+id/tx_menu1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/icon1"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:text="NOTICIAS"
                android:textAlignment="center"
                android:textColor="@color/colorNotificacion"
                android:textSize="16dp"

                android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                >
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/card4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="2dp"

        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"

        app:cardBackgroundColor="@color/colormedio"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="0dp"
        card_view:contentPadding="5dp"
        card_view:layout_constraintBottom_toTopOf="@+id/card6"
        card_view:layout_constraintLeft_toRightOf="@+id/card3"
        card_view:layout_constraintRight_toRightOf="parent"
        card_view:layout_constraintTop_toBottomOf="@+id/card2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:orientation="vertical"
            android:weightSum="1"
            >


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                >

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="0"
                >
            <ImageView
                android:id="@+id/icon6"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:backgroundTint="@color/colorNotificacion"
                android:src="@drawable/ic_bus_prueba2"
                />

            <TextView
                android:id="@+id/tx_menu6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/icon6"
                android:layout_marginTop="10dp"
                android:text="RESERVAS"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:textColor="@color/colorNotificacion"
                android:textSize="16dp"
                android:textStyle="bold"
                />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                >
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card6"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:layout_marginBottom="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        app:cardBackgroundColor="@color/colormedio"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="0dp"
        card_view:contentPadding="5dp"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintLeft_toRightOf="@+id/card5"
        card_view:layout_constraintRight_toRightOf="parent"
        card_view:layout_constraintTop_toBottomOf="@+id/card4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:orientation="vertical"
            android:weightSum="1"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                >

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="0"
                >

            <ImageView
                android:id="@+id/icon5"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"

                android:backgroundTint="@color/colorNotificacion"
                android:src="@drawable/ic_img_hsec3"
                />

                <!--android:src="@drawable/ic_russia_2018"
 -->
            <TextView
                android:id="@+id/tx_menu5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/icon5"
                android:layout_marginTop="10dp"
                android:text="PORTAL HSEC"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:textColor="@color/colorNotificacion"
                android:textSize="16dp"
                android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                >
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card5"

        android:layout_width="0dp"
        android:layout_height="0dp"

        android:layout_marginBottom="2dp"

        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"

        app:cardBackgroundColor="@color/colormedio"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="0dp"
        card_view:contentPadding="5dp"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintLeft_toLeftOf="parent"
        card_view:layout_constraintRight_toLeftOf="@+id/card6"
        card_view:layout_constraintTop_toBottomOf="@+id/card3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:orientation="vertical"
            android:weightSum="1"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                >

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="0"
                >
            <ImageView
                android:id="@+id/icon3"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:backgroundTint="@color/colorNotificacion"
                android:src="@drawable/ic_video_final2"

                />

            <TextView
                android:id="@+id/tx_menu3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/icon3"
                android:layout_marginTop="10dp"
                android:text="VIDEOTECA"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:textColor="@color/colorNotificacion"
                android:textSize="16dp"
                android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                >

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"
        app:cardBackgroundColor="@color/colormedio"

        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="0dp"
        card_view:contentPadding="5dp"
        card_view:layout_constraintBottom_toTopOf="@+id/card4"
        card_view:layout_constraintLeft_toRightOf="@+id/card1"
        card_view:layout_constraintRight_toRightOf="parent"
        card_view:layout_constraintTop_toTopOf="parent"
        android:gravity="center"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:orientation="vertical"
            android:weightSum="1"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                >

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="0"
                >
            <ImageView
                android:id="@+id/icon4"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:backgroundTint="@color/colorNotificacion"
                android:src="@drawable/ic_evento_final2"

                />

            <TextView
                android:id="@+id/tx_menu4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/icon4"
                android:layout_marginTop="10dp"
                android:text="EVENTOS"
                android:textAlignment="center"
                android:gravity="center_horizontal"

                android:textColor="@color/colorNotificacion"
                android:textSize="16dp"
                android:textStyle="bold"

                />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                >
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"
        app:cardBackgroundColor="@color/colormedio"


        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="0dp"
        card_view:contentPadding="5dp"
        card_view:layout_constraintBottom_toTopOf="@+id/card5"
        card_view:layout_constraintLeft_toLeftOf="parent"
        card_view:layout_constraintRight_toLeftOf="@+id/card4"
        card_view:layout_constraintTop_toBottomOf="@+id/card1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:orientation="vertical"
            android:weightSum="1"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                >

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="0"
                >
            <ImageView
                android:id="@+id/icon2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:backgroundTint="@color/colorNotificacion"
                android:src="@drawable/ic_galeria_prueba2"
                />
            <TextView
                android:id="@+id/tx_menu2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/icon2"
                android:layout_marginTop="10dp"
                android:text="GALERIA"
                android:gravity="center_horizontal"
                android:textAlignment="center"
                android:textColor="@color/colorNotificacion"
                android:textSize="16dp"
                android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                >

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>

