<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_com"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    card_view:cardCornerRadius="4dp"
    android:layout_margin="5dp"

    card_view:contentPadding="10dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_margin="10dp"
        >

        <TextView
            tools:text="Fecha / hora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/notific_fecha"
            android:textSize="12sp"

            android:textAlignment="viewStart"
            android:layout_below="@+id/notific_titulo"
            android:layout_alignLeft="@+id/notific_titulo"
            android:layout_alignStart="@+id/notific_titulo" />

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp"
            android:id="@+id/notific_titulo"
            tools:text="bfbvgesrhvbhsvbufhfhfhffhhfhgfhfghgshgfhsgfgshfg"
            android:textSize="12sp"
            android:textStyle="normal|bold"
            android:maxLines="1"
            android:ellipsize="end"

            android:textAlignment="viewStart"
            android:layout_alignTop="@+id/notific_icon"
            android:layout_toRightOf="@+id/notific_icon"
            android:layout_toEndOf="@+id/notific_icon" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:id="@+id/notific_icon"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


    </RelativeLayout>


</android.support.v7.widget.CardView>