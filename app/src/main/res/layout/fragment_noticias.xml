<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.FragmentNoticias"
    android:background="@drawable/edit_img"
    android:orientation="vertical"
    >

    <!-- TODO: Update blank fragment layout -->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_notice_prueba2"
                tools:layout_editor_absoluteY="0dp"
                app:layout_constraintRight_toLeftOf="@+id/textView21"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                android:id="@+id/imageView11" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="136dp"
                android:layout_height="46dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"

                android:layout_marginRight="8dp"
                android:padding="5dp"
                android:text="Noticias"
                android:textAlignment="center"
                android:textColor="@color/colorNotificacion"
                android:textSize="30sp"
                app:layout_constraintHorizontal_bias="0.663"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                tools:layout_editor_absoluteY="2dp" />


        </android.support.constraint.ConstraintLayout>


    </FrameLayout>


    <ListView
        android:id="@+id/l_frag_not"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="8dp"
        android:elevation="10dp"
        android:background="@android:color/transparent"
        android:focusable="true"


        />


</LinearLayout>
