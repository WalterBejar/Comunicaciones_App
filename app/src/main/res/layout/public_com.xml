<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_com"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    card_view:cardCornerRadius="4dp"
    card_view:contentPadding="10dp"
    app:cardBackgroundColor="@color/colormedio"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"

        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/com_imagen"
            android:focusable="false"

            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="14dp" />


        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/com_titulo"
            android:textSize="14sp"
            android:textColor="@android:color/background_dark"
            android:textStyle="normal|bold"
            android:layout_below="@+id/com_imagen"

            />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/com_titulo"
            android:layout_alignLeft="@+id/com_titulo"
            android:layout_alignStart="@+id/com_titulo"
            android:id="@+id/com_txfecha"
            android:textSize="12sp"
            android:textStyle="normal"

            />




        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/com_desc"
            android:maxLines="3"
            android:ellipsize="end"

            android:text="hoiitightrgohrtoihjtr"

            android:textSize="14sp"
            android:textStyle="normal"

            android:layout_below="@+id/com_txfecha"
            android:layout_alignLeft="@+id/com_txfecha"
            android:layout_alignStart="@+id/com_txfecha" />




    </RelativeLayout>


</android.support.v7.widget.CardView>



