<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_com"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    card_view:cardCornerRadius="4dp"
    card_view:contentPadding="10dp"
    app:cardBackgroundColor="@color/colormedio"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"

        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/com_imagen"
            android:focusable="false"

            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="14dp" />


        <TextView
            android:id="@+id/com_titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/com_imagen"
            android:lineSpacingExtra="8sp"
            android:text="TextView"
            android:textColor="@color/cardview_dark_background"
            android:textSize="16sp"

            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/com_txfecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/com_titulo"
            android:layout_alignStart="@+id/com_titulo"
            android:layout_below="@+id/com_titulo"
            android:text="TextView"
            android:textColor="@color/background_footer"
            android:textSize="14sp"

            android:textStyle="normal" />


        <TextView
            android:id="@+id/com_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/com_txfecha"
            android:layout_alignStart="@+id/com_txfecha"

            android:layout_below="@+id/com_txfecha"

            android:ellipsize="end"
            android:lineSpacingExtra="6sp"

            android:maxLines="3"
            android:text="hoiitightrgohrtoihjtr"
            android:textColor="@color/cardview_dark_background"
            android:textSize="15sp"
            android:textStyle="normal" />




    </RelativeLayout>


</android.support.v7.widget.CardView>



