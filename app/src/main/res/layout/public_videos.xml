<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_vid"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentEnd="true"
    card_view:cardCornerRadius="5dp"
    android:layout_margin="4dp"

    android:layout_alignParentRight="true"
    app:cardBackgroundColor="@color/colormedio"

    card_view:contentPadding="10dp"
    card_view:cardElevation="2dp"
    android:background="@android:color/transparent"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/titulo_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rel_vid"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:textColor="@color/cardview_dark_background"
            android:textSize="14sp"
            android:textStyle="normal|bold"
            android:text="hbhuyyuyuvytfytvgjhbj"

            />

        <TextView
            android:id="@+id/txfechavid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/titulo_video"
            android:layout_alignStart="@+id/titulo_video"
            android:layout_below="@+id/titulo_video"
            android:textSize="12sp"
            android:text="obilubilublib"
            />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rel_vid"
        >

        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"

            >

            <ImageView
                android:id="@+id/imag_vid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:transitionName="Imagen_compartida"
                />

            <ImageView
                android:id="@+id/vid_play"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"

                android:src="@drawable/button_play"
                android:visibility="invisible"

                />

        </FrameLayout>


        <TextView
            android:id="@+id/cant_vid"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_alignEnd="@+id/frameLayout"
            android:layout_alignRight="@+id/frameLayout"
            android:layout_alignTop="@+id/frameLayout"
            android:layout_gravity="bottom"
            android:layout_marginBottom="5dp"
            android:background="@color/background_footer"
            android:maxLines="1"
            android:padding="16dp"

            android:text="15"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@android:color/white"
            android:visibility="gone"

            />

        <TextView
            android:id="@+id/videtiq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/frameLayout"
            android:layout_alignLeft="@+id/cant_vid"
            android:layout_alignRight="@+id/frameLayout"

            android:layout_alignStart="@+id/cant_vid"
            android:layout_alignTop="@+id/frameLayout"
            android:layout_marginTop="42dp"
            android:text="VIDEOS"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:visibility="gone"

            />

</RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>


