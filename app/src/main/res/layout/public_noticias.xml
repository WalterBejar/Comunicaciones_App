<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentEnd="true"
    card_view:cardCornerRadius="5dp"
    android:layout_margin="5dp"
    android:layout_alignParentRight="true"
    card_view:contentPadding="10dp"
    card_view:cardElevation="2dp"
    app:cardBackgroundColor="@color/colormedio"


    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        >


        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:visibility="gone"
            android:id="@+id/icon_inicio"
            android:tint = "@color/colorNotificacion"

            />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/cardview_dark_background"
            android:id="@+id/titulo_noticia"
            tools:text="Titulo"
            android:textSize="14sp"
            android:textStyle="normal|bold"
            android:layout_below="@+id/frameimg"
            android:layout_toRightOf="@+id/icon_inicio"
            android:layout_toEndOf="@+id/icon_inicio" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titulo_noticia"
            android:layout_alignLeft="@+id/titulo_noticia"
            android:layout_alignStart="@+id/titulo_noticia"
            android:id="@+id/txfecha"
            android:textSize="12sp"
            tools:text="Fecha"

            />




<FrameLayout
    android:id="@+id/frameimg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"

    >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imag_not"
            android:focusable="false"
            />

</FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txdesc"
            android:layout_below="@+id/txfecha"
            android:maxLines="3"
            android:ellipsize="end"
            android:lineSpacingExtra="2sp"
            tools:text="descripcion"
            android:layout_marginTop="5dp"
            android:layout_alignLeft="@+id/frameimg"
            android:layout_alignStart="@+id/frameimg"

            android:textSize="14sp"
            android:textStyle="normal"
             />

    </RelativeLayout>








</android.support.v7.widget.CardView>
