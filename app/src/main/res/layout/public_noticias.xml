<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentEnd="true"
    card_view:cardCornerRadius="5dp"
    android:layout_margin="4dp"
    android:layout_alignParentRight="true"
    card_view:contentPadding="10dp"
    card_view:cardElevation="2dp"
    app:cardBackgroundColor="@color/colormedio"


    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        >


        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:visibility="gone"
            android:id="@+id/icon_inicio"
            android:tint = "@color/colorNotificacion"

            />


        <TextView
            android:id="@+id/titulo_noticia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/frameimg"
            android:layout_toEndOf="@+id/icon_inicio"
            android:layout_toRightOf="@+id/icon_inicio"
            android:lineSpacingExtra="8sp"
            android:textColor="@color/cardview_dark_background"
            android:textSize="16sp"
            android:textStyle="normal|bold"
            tools:text="Titulo" />

        <TextView
            android:id="@+id/txfecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/titulo_noticia"
            android:layout_alignStart="@+id/titulo_noticia"
            android:layout_below="@+id/titulo_noticia"
            android:textColor="@color/background_footer"
            android:textSize="14sp"

            tools:text="Fecha" />




<FrameLayout
    android:id="@+id/frameimg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"

    >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="200dp"
            android:id="@+id/imag_not"
            android:focusable="false"
            />

</FrameLayout>

        <TextView
            android:id="@+id/txdesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/frameimg"
            android:layout_alignStart="@+id/frameimg"
            android:layout_below="@+id/txfecha"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:lineSpacingExtra="10dp"
            android:maxLines="5"
            android:textAlignment="viewStart"

            android:textColor="@color/cardview_dark_background"
            android:textSize="15sp"
            android:textStyle="normal"
            tools:text="descripcion"
            android:gravity="start" />

    </RelativeLayout>








</android.support.v7.widget.CardView>
