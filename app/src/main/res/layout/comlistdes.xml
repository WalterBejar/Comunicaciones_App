<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
xmlns:card_view="http://schemas.android.com/apk/res-auto"
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/com_des_file"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_alignParentTop="true"
android:layout_alignParentLeft="true"
android:layout_alignParentStart="true"
card_view:cardCornerRadius="4dp"
android:layout_margin="5dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        >

        <TextView
            android:id="@+id/com_nom_file"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="14sp"
            android:textStyle="normal|bold"

            android:layout_alignTop="@+id/com_icon_des"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp" />

        <TextView
            android:id="@+id/com_tipo_file"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="12sp"
            android:layout_below="@+id/com_nom_file"
            android:layout_alignLeft="@+id/com_nom_file"
            android:layout_alignStart="@+id/com_nom_file" />


        <TextView
            android:id="@+id/com_tam_file"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/com_icon_des"
            android:layout_alignLeft="@+id/com_icon_des"
            android:layout_alignRight="@+id/com_icon_des"
            android:layout_alignStart="@+id/com_icon_des"
            android:layout_below="@+id/com_icon_des"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:text="456456"
            android:textAlignment="center"
            android:textSize="12sp" />


        <ImageButton
            android:id="@+id/com_icon_des"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_descarga"
            android:background="@color/colorBlanco"
            android:layout_marginTop="10dp"
             />

    </RelativeLayout>


</android.support.v7.widget.CardView>